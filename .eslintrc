{
  "extends": [
    "standard",
    "plugin:jest/recommended",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "prettier"
  ],
  "plugins": ["jest", "react", "jsx-a11y", "prettier"],
  "env": {
    "jest/globals": true
  },
  "rules": {
    "curly": ["error", "all"],
    "react/jsx-curly-brace-presence": "error",
    "react/prop-types": "off",
    "react/display-name": "off"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "globals": {
    "Event": true
  }
}
